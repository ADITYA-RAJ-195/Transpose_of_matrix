#include<bits/stdc++.h>
using namespace std;
void solve(string& s,unordered_map<string,int>& mp){
    string temp="";
    for(int i=0;i<s.length();i++){
        if(i==s.length()-1){
            mp[temp]++;
        }
        if(s[i]==' '){
            mp[temp]++;
            temp="";
        }
        else{
            temp+=s[i];
        }
    }
}
void printmap(unordered_map<string,int>& mp){
    for(auto c:mp){
        cout<<c.first<<" "<<c.second;
        cout<<endl;
    }
}
int main(){
    string s;
    cout<<"Enter the paragraph"<<endl;
    getline(cin, s);
    unordered_map<string,int> mp;
    solve(s,mp);
    printmap(mp);
}
